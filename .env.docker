# ====================================================================
# Docker 환경 통합 설정
# ====================================================================
COMPOSE_PROJECT_NAME=guestbook
APP_VERSION=1.0.0
ENVIRONMENT=docker

# ====================================================================
# 네트워크 및 포트 설정
# ====================================================================
BACKEND_PORT=8080
FRONTEND_PORT=3000

# ====================================================================
# API 설정 (Docker 환경)
# ====================================================================
# 브라우저에서 접근할 때는 localhost 사용
API_BASE_URL=http://localhost:8080/api
API_VERSION=v1
API_TIMEOUT=30000

# ====================================================================
# Spring Boot 설정
# ====================================================================
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# ====================================================================
# 데이터베이스 설정
# ====================================================================
DATABASE_URL=jdbc:h2:mem:dockerdb
DATABASE_DRIVER=org.h2.Driver
DATABASE_USERNAME=docker
DATABASE_PASSWORD=

# ====================================================================
# JPA 설정
# ====================================================================
JPA_DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect
JPA_DDL_AUTO=create-drop
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ====================================================================
# H2 콘솔 설정 (Docker에서는 비활성화)
# ====================================================================
H2_CONSOLE_ENABLED=false
H2_CONSOLE_PATH=/h2-console
H2_WEB_ALLOW_OTHERS=false

# ====================================================================
# 로깅 설정
# ====================================================================
LOG_LEVEL_APP=INFO
LOG_LEVEL_WEB=WARN
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_HIBERNATE=WARN

# ====================================================================
# 액추에이터 설정
# ====================================================================
MANAGEMENT_ENDPOINTS=health,info
MANAGEMENT_HEALTH_SHOW_DETAILS=always

# ====================================================================
# CORS 설정
# ====================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ====================================================================
# Vite 프론트엔드 설정
# ====================================================================
VITE_API_BASE_URL=http://localhost:8080/api
VITE_APP_TITLE=방명록
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=docker
VITE_API_TIMEOUT=30000